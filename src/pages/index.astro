---
import Layout from "../layouts/Layout.astro";
import content from "../content/content.json";
import Section from "../components/Section.astro";
import Footer from "../components/Footer.astro";
import SideProjects from "../components/SideProjects.astro";
---

<Layout title="Uciel Sola - Frotend Developer">
	<main class="flex flex-col gap-2 h-full w-full lg:max-w-7xl" slot="content">
		<h1 class="text-3xl font-bold text-cullen">
			Uciel Sola -
			<span class="text-buffy text-xl"> Frontend Developer</span>
		</h1>

		<div
			class="flex flex-col gap-8 md:flex-row md:justify-between md:gap-12 pb-4 overflow-x-hidden"
		>
			<div class="grow">
				<Section
					paragraphs={content.summary.paragraphs}
					highlights={content.summary.highlights}
				/>

				<p class="text-sm text-aro-300 pt-8">
					We can get in touch via <a
						href="https://linkedin.com/in/ucielsola"
						rel="noreferrer noopener"
						target="_blank"
						title="Find me at LinkedIn"
						class="text-vonCount-100 font-semibold underline hover:text-buffy active:text-green-400 transition-colors duration-150"
						>LinkedIn</a
					>.
				</p>

				<p class="text-sm text-aro-300">
					You can also find more about me on this site: <a
						href="https://mnf.red/ucielsola"
						rel="noreferrer noopener"
						target="_blank"
						title="Find me at Manfred.com"
						class="text-vonCount-100 font-semibold underline hover:text-buffy active:text-green-400 transition-colors duration-150"
						>mnf.red/ucielsola</a
					>
				</p>
			</div>

			<SideProjects />
		</div>
		<div class="lg:max-w-3xl flex flex-col gap-12">
			{
				content.experience.map((e) => (
					<Section
						title={e.title}
						url={e.url}
						company={e.company}
						dateLabel={e.date_label}
						paragraphs={e.paragraphs}
						highlights={e.highlights}
						tags={e.tags}
					/>
				))
			}
		</div>
	</main>

	<Footer slot="footer" />
</Layout>
